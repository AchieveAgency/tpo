
{#############################Set Module Includes########################################}
{% set includes_path = '/modules/custom/tpo/modules/paragraph/templates/includes' %}
{% import includes_path ~ '/tpo-paragraph-global.html.twig' as global %}


{#############################Content Variable########################################}
{% if content.field_tpo_paragraph_column_1['#object'] %}
{% set column_one = content.field_tpo_paragraph_column_1 %}
{% else %}
{% set column_one = false %}
{% endif %}

{#############################Content Variable########################################}
{% if content.field_tpo_paragraph_column_2['#object'] %}
{% set column_two = content.field_tpo_paragraph_column_2 %}
{% else %}
{% set column_two = false %}
{% endif %}

{#############################Content Variable########################################}
{% if content.field_tpo_paragraph_column_3['#object'] %}
{% set column_three = content.field_tpo_paragraph_column_3 %}
{% else %}
{% set column_three = false %}
{% endif %}

{#############################Content Variable########################################}
{% if content.field_tpo_paragraph_column_4['#object'] %}
{% set column_four = content.field_tpo_paragraph_column_4 %}
{% else %}
{% set column_four = false %}
{% endif %}

{#############################Content Variable########################################}
{% if content.field_tpo_paragraph_column_5['#object'] %}
{% set column_five = content.field_tpo_paragraph_column_5 %}
{% else %}
{% set column_five = false %}
{% endif %}

{#############################Content Variable########################################}
{% if content.field_tpo_paragraph_column_6['#object'] %}
{% set column_six = content.field_tpo_paragraph_column_6 %}
{% else %}
{% set column_six = false %}
{% endif %}


{#############################Sets Default Variables########################################}


{############################# Sets classes used for containers ########################################}
{%
  set row_classes = [
    "row",
    "tpo-paragraph-row",
    "tpo-paragraph-six-column",
    tpo_paragraph.class ? tpo_paragraph.class,
  ]
%}

{%
    set column_1_classes = [
      "col-md-2",
      "col-sm-12",
      "tpo-paragraph-column-one",
      "tpo-paragraph-column",
    ]
  %}

  {%
    set column_2_classes = [
      "col-md-2",
      "col-sm-12",
      "tpo-paragraph-column-two",
      "tpo-paragraph-column",
    ]
  %}

  {%
    set column_3_classes = [
      "col-md-2",
      "col-sm-12",
      "tpo-paragraph-column-three",
      "tpo-paragraph-column",
    ]
  %}

  {%
    set column_4_classes = [
      "col-md-2",
      "col-sm-12",
      "tpo-paragraph-column-four",
      "tpo-paragraph-column",
    ]
  %}

  {%
    set column_5_classes = [
      "col-md-2",
      "col-sm-12",
      "tpo-paragraph-column-five",
      "tpo-paragraph-column",
    ]
  %}

  {%
    set column_6_classes = [
      "col-md-2",
      "col-sm-12",
      "tpo-paragraph-column-six",
      "tpo-paragraph-column",
    ]
  %}
  
  

{%
  set row_id = tpo_paragraph.id ? tpo_paragraph.id|clean_id
%}

{############################# Begins paragraph markup ########################################}

<div {{ global.add_classes( row_classes ) }} {{ global.add_id( row_id ) }} style="{{ global.add_padding( tpo_paragraph.container_padding ) }} {{ global.add_margin( tpo_paragraph.container_margin ) }} {{ global.add_container_background(tpo_paragraph.background_style,tpo_paragraph.background_color,tpo_paragraph.background_image,tpo_paragraph.background_image_style) }}">
    <div {{ global.add_classes( column_1_classes  ) }} style="{{ global.add_padding( tpo_paragraph.column_one_padding ) }}" >
        {{column_one}}
    </div>
    <div {{ global.add_classes( column_2_classes  ) }} style="{{ global.add_padding( tpo_paragraph.column_two_padding) }}" >
        {{column_two}}
    </div>
    <div {{ global.add_classes( column_3_classes  ) }} style="{{ global.add_padding( tpo_paragraph.column_three_padding) }}" >
        {{column_three}}
    </div>
    <div {{ global.add_classes( column_4_classes  ) }} style="{{ global.add_padding( tpo_paragraph.column_four_padding) }}" >
        {{column_four}}
    </div>
    <div {{ global.add_classes( column_5_classes  ) }} style="{{ global.add_padding( tpo_paragraph.column_five_padding) }}" >
            {{column_five}}
    </div>
    <div {{ global.add_classes( column_6_classes  ) }} style="{{ global.add_padding( tpo_paragraph.column_six_padding) }}" >
            {{column_six}}
    </div>
</div>

{############################# Ends paragraph markup ########################################}
    