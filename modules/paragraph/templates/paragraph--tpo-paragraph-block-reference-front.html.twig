
{#############################Set Module Includes########################################}
{% set includes_path = '/modules/custom/tpo/modules/paragraph/templates/includes' %}
{% import includes_path ~ '/tpo-paragraph-global.html.twig' as global %}


{#############################Block Reference Variable########################################}
{% if content.field_tpo_paragraph_block_cont['#object'] %}
{% set block_content = content.field_tpo_paragraph_block_cont %}
{% endif %}

{############################# Sets classes used for containers ########################################}
{%
  set block_reference_classes = [
    "tpo-paragraph-block-reference",
    tpo_paragraph.class ? tpo_paragraph.class,
    "tpo-paragraph-content",
  ]
%}

{%
  set block_reference_id = tpo_paragraph.id ? tpo_paragraph.id|clean_id
%}

{############################# Begins paragraph markup ########################################}

<div {{ global.add_classes( block_reference_classes ) }} {{ global.add_id( block_reference_id ) }} style="{{ global.add_padding( tpo_paragraph.container_padding ) }} {{ global.add_margin( tpo_paragraph.container_margin ) }} {{ global.add_container_background(tpo_paragraph.background_style,tpo_paragraph.background_color,tpo_paragraph.background_image,tpo_paragraph.background_image_style) }}">
      {{block_content}}
</div>

{############################# Ends paragraph markup ########################################}
    