
{#############################Set Module Includes########################################}
{% set includes_path = '/modules/custom/tpo/modules/paragraph/templates/includes' %}
{% import includes_path ~ '/tpo-paragraph-global.html.twig' as global %}


{#############################Body Text Variable########################################}
{% if content.field_tpo_paragraph_body['#object'] %}
{% set body_text = content.field_tpo_paragraph_body|render %}
{% endif %}

{############################# Sets classes used for containers ########################################}
{%
  set body_classes = [
    "tpo-paragraph-body",
    tpo_paragraph.class ? tpo_paragraph.class,
    "tpo-paragraph-content",
  ]
%}

{%
  set body_id = tpo_paragraph.id ? tpo_paragraph.id|clean_id
%}

{############################# Begins paragraph markup ########################################}

<div {{ global.add_classes( body_classes ) }} {{ global.add_id( body_id ) }} style="{{ global.add_padding( tpo_paragraph.container_padding ) }} {{ global.add_margin( tpo_paragraph.container_margin ) }} {{ global.add_container_background(tpo_paragraph.background_style,tpo_paragraph.background_color,tpo_paragraph.background_image,tpo_paragraph.background_image_style) }}">
      {{body_text}}
</div>

{############################# Ends paragraph markup ########################################}
    